<Page x:Class="SalesManageSystem.BasicInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalesManageSystem"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BasicInfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="基础资料"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="货品资料" Click="goodsInfoBtnClicked"/>
            <Button Content="仓库资料" Grid.Column="1" Click="wareHouseInfoBtnClicked"/>
            <Button Content="供货商资料" Grid.Row="1" Click="supplierInfoBtnClicked"/>
            <Button Content="客户资料" Click="customerInfoBtnClicked"  Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </Grid>
</Page>
